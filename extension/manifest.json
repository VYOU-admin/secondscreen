{
  "manifest_version": 3,
  "name": "SecondScreen Sidebar (MVP)",
  "version": "0.1.1",
  "description": "Shows a creator sidebar on ESPN+ pages.",
  "permissions": ["storage"],
  "host_permissions": [
    "https://plus.espn.com/*",
    "https://www.espn.com/*",
    "https://*.espn.com/*",
    "https://secondscreen-chi.vercel.app/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://secondscreen-chi.vercel.app/*"
      ],
      "js": ["token_sync.js"],
      "run_at": "document_idle"
    },
    {
      "matches": [
        "https://plus.espn.com/*",
        "https://www.espn.com/*",
        "https://*.espn.com/*"
      ],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_idle"
    }
  ]
}
